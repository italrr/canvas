set width 200
set height 100


set area [math:sqrt [+ [math:pow width 2] [math:pow height 2]]]
set mod [* area 0.1]

[mut mod 10]

cv:window-create 'Game' width height 4 4
do [cv:running] [
    [cv:step]
    [cv:clear]
    [
        iter [.. 0 360 1]~an [
            [set x [+ [* mod [math:sin an]] [* width 0.5]]]
            [set y [+ [* mod [math:cos an]] [* height 0.5]]]
            [cv:d-pixel x y [1 0 0 1]]
        ]
    ]
    [cv:draw]
]